---
import { Image } from 'astro:assets';

---

<header>
  <Image
    src="/src/assets/logo.png"
    alt="Fusion Cup Logo"
    width={200}
    height={100}
    loading="lazy"
  />
</header>

<style>
  header {
    background-color: var(--white);
    color: white;
    text-align: center;
    padding: .5rem 0;
  }

  @media (min-width: 480px) {
    header {
      text-align: left;
      padding: .5rem 3rem;
    }
  }
</style>