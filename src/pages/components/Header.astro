---
import { Image } from 'astro:assets';
import Wrapper from './Wrapper.astro';

---

<header>
  <Wrapper>
    <Image
      src="/src/assets/logo.png"
      alt="Fusion Cup Logo"
      width={200}
      height={100}
      loading="lazy"
    />
  </Wrapper>
</header>

<style>
  header {
    background-color: var(--white);
    color: white;
    text-align: center;
  }

  @media (min-width: 480px) {
    header {
      text-align: left;
    }
  }
</style>