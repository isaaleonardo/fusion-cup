<style is:global>
	.empty {
		background-color: var(--primary-light-color);
		min-height: 6rem;
	}

	.flex-container {
		display: flex;
		flex-direction: column;
		gap: .5rem;
	}

	div[class^="flex-container--"] {
		display: flex;
		flex-direction: row;
		gap: .5rem;
	}

	div[class^="flex-container"] > * {
		border-radius: 1rem;
	}

	.div6 {
		display: flex;
		align-items: center;
		justify-content: center;

		img {
			width: 80%;
			height: 80%;
		}
	}

	.div6 {
		display: flex;
		align-items: center;
		justify-content: center;

		img {
			width: 80%;
			height: 80%;
			max-width: 260px;
			max-height: 260px;
		}
	}

	.div7 {
		padding: 5px;
		
		a {
			display: flex;
			height: 100%;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			gap: .5rem;
			text-decoration: none;
			color: var(--white-color);
		}
	}
</style>