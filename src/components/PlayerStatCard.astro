---
const { title, name, stat } = Astro.props;
---
<div class="player-stat-card">
  <div class="title">{title}</div>
  <div class="body">
    <span class="name">
      {
        name.split(' ').map((word) => (
          <span>{word}<br/></span>
        ))
      }
    </span>
  </div>
  <div class="value">{stat}</div>
</div>

<style>
  .player-stat-card {
    background-color: var(--primary-light-color);
    color: var(--white);
    font-size: .8rem;
  }
  
  .player-stat-card > * {
    padding-inline: 1rem;
		padding: 1rem 1.5rem;
  }
  
  .title {
    background-color: var(--white);
    color: var(--primary-color);
    font-weight: bold;
    border-radius: 1rem 1rem 0 0;
    text-align: center;
  }

  .body {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: .5rem;
    font-size: 1.5rem;
  }

  .body > * {
    display: inline-block;
    text-align: center;
  }

  .value {
    font-size: 1.2rem;
    font-weight: bold;
    text-align: center;
    margin-top: .5rem;
  }
</style>
